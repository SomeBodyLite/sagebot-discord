{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"rootDir": "./src",
		"outDir": "./dist",

		"strict": true,
		"esModuleInterop": true,

		"types": ["node"],

		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": ["src"]
}
