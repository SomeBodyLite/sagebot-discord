{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "node",

		"rootDir": "./src",
		"outDir": "./dist",

		"strict": true,
		"esModuleInterop": true,

		"types": ["node"],

		"skipLibCheck": true,
		"sourceMap": true
	},
	"allowJs": true,
	"include": ["src"]
}
